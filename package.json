{
  "name": "space-tracker-pro",
  "version": "1.0.0",
  "description": "Real-time International Space Station tracking with 3D visualization and advanced orbital mechanics",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 8080 -o",
    "dev": "npx http-server . -p 8080 -o --cors -c-1",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx postcss styles/main.css -o dist/styles/main.min.css --use autoprefixer --use cssnano",
    "build:js": "npx rollup scripts/main.js -o dist/scripts/main.min.js -f iife",
    "lint": "npx eslint scripts/ src/ --ext .js,.ts,.tsx",
    "lint:fix": "npx eslint scripts/ src/ --ext .js,.ts,.tsx --fix",
    "type-check": "npx tsc --noEmit",
    "test": "echo \"No tests specified\" && exit 0",
    "clean": "rimraf dist/",
    "preview": "npx http-server dist/ -p 8080 -o"
  },
  "keywords": [
    "iss",
    "space-station",
    "tracking",
    "satellite",
    "orbit",
    "space",
    "3d",
    "visualization",
    "real-time",
    "astronomy",
    "orbital-mechanics",
    "worldwind",
    "react",
    "typescript"
  ],
  "author": {
    "name": "SpaceTracker Pro Team",
    "email": "contact@spacetracker.pro",
    "url": "https://spacetracker.pro"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spacetracker-pro/space-tracker-pro.git"
  },
  "bugs": {
    "url": "https://github.com/spacetracker-pro/space-tracker-pro/issues"
  },
  "homepage": "https://spacetracker.pro",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "dependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/three": "^0.180.0",
    "axios": "^1.12.2",
    "date-fns": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "http-server": "^14.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "files": [
    "index.html",
    "styles/",
    "scripts/",
    "src/",
    "images/",
    "README.md",
    "LICENSE"
  ],
  "config": {
    "port": 8080,
    "host": "localhost"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/",
    "*.min.js"
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}